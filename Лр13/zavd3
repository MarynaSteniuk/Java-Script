<body>
  <h1>Завдання 3. Події на кнопках і лінку</h1>

  <button id="btn1">Змінити фон на синій</button>
  <button id="btn2">Змінити фон на рожевий</button>
  <button id="btn3">Коричневий при утриманні</button>
  <a href="#">Наведи на мене</a>

<script>
const body = document.body;
document.getElementById('btn1').onclick = () => body.style.background = 'lightblue';
document.getElementById('btn2').ondblclick = () => body.style.background = 'pink';
document.getElementById('btn3').onmousedown = () => body.style.background = 'saddlebrown';
document.getElementById('btn3').onmouseup = () => body.style.background = 'white';
document.querySelector('a').onmouseover = () => body.style.background = 'yellow';
document.querySelector('a').onmouseout = () => body.style.background = 'white';
</script>
</body>
