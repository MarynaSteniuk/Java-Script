  <p id="message"></p>

<script>
const msg = document.getElementById('message');
const btn = document.getElementById('btn');

btn.onclick = () => msg.innerText = "I was pressed!";
btn.onmouseover = () => msg.innerText = "Mouse on me!";
btn.onmouseout = () => msg.innerText = "Mouse is not on me!";
</script>
