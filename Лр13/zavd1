<body>
  <h1>Завдання 1. Робота з об’єктом window</h1>
  <button onclick="openWin()">Відкрити нове вікно</button>

<script>
let myWindow;

function openWin() {
  myWindow = window.open("", "", "width=300,height=300");
  myWindow.document.write("<h2 style='color:#d63384;text-align:center;'>Нове вікно</h2>");

  setTimeout(() => myWindow.resizeTo(500, 500), 2000);
  setTimeout(() => myWindow.moveTo(200, 200), 4000);
  setTimeout(() => myWindow.close(), 6000);
}
</script>
